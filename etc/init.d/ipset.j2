#!/bin/bash
#
# IPset init script
#
# chkconfig: - 27 90
# description: IPset tables

### BEGIN INIT INFO
# Provides: ipset
# Required-Start: $local_fs $remote_fs $syslog $network
# Should-Start: VMware $time $named
# Required-Stop:
# Default-Start:
# Default-Stop:	  0 1 2 3 4 5 6
# Short-Description: IPset tables
# Description: Init IPset tables from /etc/ipset.d
#              should run before Shorewall
### END INIT INFO

# Source function library.
# RedHat
if test -r /etc/rc.d/init.d/functions ; then
  source /etc/rc.d/init.d/functions
fi

# Debian & Ubuntu
if test -r /lib/lsb/init-functions ; then
  source /lib/lsb/init-functions
  function success() {
    log_success_msg
  }
fi

prog="ipset"
daemon="/usr/sbin/$prog"
logger="logger -i -t $prog"
lockfile="/var/lock/subsys/$prog"
basedir=/etc/ipset.d

# Get startup options (override default)
OPTIONS=

if [ -f ${SYSCONFDIR}/$prog ]; then
  . ${SYSCONFDIR}/$prog
fi

start() {
  local _set
  echo -n $"Starting IPset: "
  for _set in ${basedir}/*.sh ; do
    ${_set} start | $logger
  done
  retval=0
  success
  echo
  return $retval
}

stop() {
  local _set
  echo -n $"Stopping IPset: "
  for _set in ${basedir}/*.sh ; do
    ${_set} stop | $logger
  done
  retval=0
  success
  echo
  return $retval
}

status(){
  # fake status
  ipset -n -L
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart|reload)
    start
  ;;
  status)
    status
  ;;
  *)
    echo "Usage: $0 start|stop|restart|status|reload"
    exit 1
  ;;
esac
